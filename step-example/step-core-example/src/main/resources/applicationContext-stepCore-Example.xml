<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd ">

    <context:component-scan base-package="com.step.core.example"/>

    <bean id="objectFactory" class="com.step.core.factory.spring.SpringManagedObjectFactory"/>

    <bean id="stepConfigurations" class="com.step.core.BasicConfiguration">
        <property name="stepPackages" value="com.step.core.example.steps,
                                             com.step.external.steps"/>
        <property name="stepConfigurationFiles" value="step-example.xml,
                                                       external-steps-conf.xml,
                                                       step-request-params.xml"/>
    </bean>

    <bean id="stepRepository" class="com.step.core.repository.BasicStepRepository" init-method="buildRepository">
        <property name="configuration" ref="stepConfigurations"/>
    </bean>

    <bean id="stepInformationService" class="com.step.informar.service.impl.BasicStepInformationService">
        <property name="stepRepository" ref="stepRepository"/>
    </bean>

    <bean id="stepContainer" class="com.step.core.container.impl.DefaultStepExecutionContainer" init-method="init">
        <property name="configuration" ref="stepConfigurations"/>
        <property name="objectFactory" ref="objectFactory"/>
        <property name="stepRepository" ref="stepRepository"/>
    </bean>

</beans>